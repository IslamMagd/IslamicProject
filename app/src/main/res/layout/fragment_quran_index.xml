<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ui.quran.quranindex.QuranIndexFragment">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="8dp"
        android:backgroundTint="@null"
        android:padding="8dp"
        app:cardBackgroundColor="@color/quran_green"
        app:cardCornerRadius="25dp">

        <EditText
            android:id="@+id/quran_index_et_search"
            android:layout_marginStart="16dp"
            android:background="@null"
            android:backgroundTint="@null"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableStart="@drawable/baseline_search_24"
            android:enabled="true"
            android:focusable="false"
            />
    </androidx.cardview.widget.CardView>

    <com.google.android.material.tabs.TabLayout
    android:id="@+id/quran_index_tabs"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@color/quran_yellow"
        app:tabGravity="fill"
    app:tabMaxWidth="0dp"
    app:tabMode="fixed" />

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/quran_index_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>